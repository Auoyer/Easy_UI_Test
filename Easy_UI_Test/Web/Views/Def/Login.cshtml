@{
    ViewBag.Title = "登录页";
    Layout = "~/Views/Shared/_Layout_Easy.cshtml";
}
<div style="width: 100%; background-color: lightblue;">
    <div style="height: 50px;width:70%;margin:0 auto;">
        <marquee style="font-size:20px;line-height:50px;" direction="left" align="bottom" onmouseout="this.start()" onmouseover="this.stop()" scrollamount="2" scrolldelay="1">水平滚动字幕内容</marquee>
    </div>
</div>
<div style="height: 180px; padding-top:20px;">
    <div style="margin: 0 auto;width:25%;">
        <form id="ff" method="post" action="/Def/CheckUser" >
            <table>
                <tr>
                    <td>
                        <label for="name">账号：</label>
                    </td>
                    <td>
                        <input class="easyui-validatebox" type="text" name="name" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="password">密码：</label>
                    </td>
                    <td>
                        <input class="easyui-validatebox" type="password" name="password" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="padding-left:70px;">
                        <input type="submit" value="登录" onclick="return checkinfo()">
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<script>
    $(function () {
        $('#ff').form({
            success: function (data) {
                var re = eval('(' + data + ')');
                if (re.JResult) {
                    location.href = "/Def/Index";
                }
                else {
                    alert(re.JData);
                }
            }
        });
    });
    function checkinfo() {
        if ($("input[name='name']").val() == "") {
            alert("请输入帐号！");
            return false;
        }
        if ($("input[name='password']").val() == "") {
            alert("请输入密码！");
            return false;
        }
        return true;
    }
</script>
